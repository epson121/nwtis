<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <description>config file num 1</description>
        <param-name>konfiguracija</param-name>
        <param-value>NWTiS.db.config_1.xml</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>org.foi.nwtis.lurajcevi.web.NeuspjesnaPrijava</exception-type>
        <location>/jsp/login.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>nwtis - vjezba 08_1</display-name>
        <web-resource-collection>
            <web-resource-name>nwtis - admin</web-resource-name>
            <description>opis</description>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>nwtis</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description>Potrebna je sigurna veza</description>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>nwtis - vjezba 08_1</realm-name>
    </login-config>
    <security-role>
        <description>nwtis</description>
        <role-name>nwtis</role-name>
    </security-role>
</web-app>
